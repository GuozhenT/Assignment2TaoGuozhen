@model Assignment2TaoGuozhen.Data.ViewModels.Contact

@{
    ViewData["Title"] = "ContactMail";
}

<h1>ContactMail</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="table-responsive">
        <table class="table align-middle">
            <tr>
                <td colspan="2" align="center">Contact Us</td>
            
            </tr>
            </>
            <tr>
                <td>Address</td>
                <td>28A Linwood Avenue, Mount Albert, Auckland</td>
            
            </tr>
            <tr class="align-bottom">
                <td>Email</td>
                <td>guta820ess.ais.ac.nz</td>
            </tr>
            <tr class="align-bottom">
                <td>Phone</td>
                <td>123456789</td>
            </tr>
        </table>
    </div>
    <div class="col-md-4">
        <form asp-action="ContactMail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
@if (@ViewBag.ConfirmMsg != null)
{
    <div class="alert alert-success">@ViewBag.ConfirmMsg</div>
}
<div>
