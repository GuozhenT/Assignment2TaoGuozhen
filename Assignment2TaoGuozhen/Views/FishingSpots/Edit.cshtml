@model NewFishingSpotVm
@using Assignment2TaoGuozhen.Data;
@using Assignment2TaoGuozhen.Data.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
 
@{
    ViewData["Title"] = "Update Fishing Spot";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update Fishing Spot</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OpenDate" class="control-label"></label>
                                <input asp-for="OpenDate" type="date" class="form-control" />
                                <span asp-validation-for="OpenDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CloseDate" class="control-label"></label>
                                <input asp-for="CloseDate" type="date" class="form-control" />
                                <span asp-validation-for="CloseDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label"></label>
                                <input asp-for="ImageUrl" class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ParkId" class="control-label"></label>
                                <select asp-for="ParkId" class="form-control" asp-items="ViewBag.Parks"></select>
                                <span asp-validation-for="ParkId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SpotCategory" class="control-label"></label>
                                <select asp-for="SpotCategory" class="form-control" asp-items="Html.GetEnumSelectList<SpotCategory>()"></select>
                                <span asp-validation-for="SpotCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ManageCompanyId" class="control-label"></label>
                                <select asp-for="ManageCompanyId" class="form-control" asp-items="ViewBag.ManageCompanies"></select>
                                <span asp-validation-for="ManageCompanyId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FoodcourtIds" class="control-label"></label>
                                <select asp-for="FoodcourtIds" class="form-control" asp-items="ViewBag.Foodcourts" multiple></select>
                                <span asp-validation-for="FoodcourtIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageUrl").val();
        });

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}